{
	"manifest_version": 2,
	"name": "Spotlink",
	"description": "Adds Spotify button below Youtube videos. Button will turn green if the video is found on Spotify and link to the song in the Spotify Web Player.",
	"version": "0.0.0.2",
	"default_locale": "en",
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"js": ["scripts/content.js", "scripts/spotify-api.js"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"permissions": [
		"https://api.spotify.com/v1/search*",
		"https://www.youtube.com/*",
		"storage"
	],
	"web_accessible_resources": [
		"images/spotify/Spotify_Icon_Green.png",
		"images/spotify/Spotify_Icon_Black.png"
	]
}
